{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "exclude": ["node_modules", "dist", "test"]
}
